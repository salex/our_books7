div.w-full
  h1.font-bold.text-2xl Editing Client
  div.flex.gap-8
    = link_to icon('fas fa-eye',"Show Client"), edit_client_path(@client), class:"#{btn_sm_green}"
    = link_to icon('fas fa-list',"List Clients"), 
      clients_path, class:"#{btn_sm_green}"
    = button_to icon('fas fa-trash',"Destroy Client"), @client, method: :delete, form:{data: { turbo_confirm: 'Are you sure?', turbo_method:'delete' }}, class:"#{btn_sm} bg-red-700 text-white"

  hr.border-1.border-blue-500.my-1
  == render "form", client: @client
